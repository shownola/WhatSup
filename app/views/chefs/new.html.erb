<%= render 'shared/page_title', title: 'Sign up' %>

<%= render 'shared/errors', obj: @chef %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= form_for(@chef, :html => {class: 'justify-content-md-center', role: 'form'}) do |f| %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :chefname %>
          </div>
          <div class="col-md-10">
            <%=  f.text_field :chefname, class: 'form-control', placeholder: 'Name of Chef', autofocus: true %>
          </div>
          
        </div>
        <div class="form-group">
          <div class="control-label co-md-2">
            <%= f.label :email %>
          </div>
          <div class="col-md-10">
            <%= f.email_field :email, class: "form-control", placeholder: 'Enter Email Address' %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label co-md-2">
            <%= f.label :password %>
          </div>
          <div class="col-md-10">
            <%= f.password_field :password, class: "form-control", placeholder: 'Enter a Password' %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label co-md-2">
            <%= f.label :password_confirmation %>
          </div>
          <div class="col-md-10">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: 'Enter password again for confirmation' %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= f.submit class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
      <% end %>
      
      <div class="col-md-10 col-md-offset-4 text-center">
        [ <%= link_to 'Cancel and Return to Recipes Listing', recipes_path %> ]
      </div>
    </div>
  </div>
</div>  