<div class="row comment-fix">
  <div class="col-md-2">
    <section class="chef_info justify-content-center">
      <%= gravatar_for(comment.chef, size: 60) %>
    </section>
  </div>
  <div class="col-md-10 card">
    <p><%= comment.description %></p>
    <p><span class="quiet">
      <small>Created: <%= time_ago_in_words(comment.created_at) %> ago by: 
                             <em><%= comment.chef.chefname %></em></small>
      </span></p>
  </div>
</div>

